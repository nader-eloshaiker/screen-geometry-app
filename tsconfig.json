{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React",
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "types": ["vitest/globals"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@local/assets/*": ["./src/app/assets/*"],
      "@local/components/*": ["./src/app/components/*"],
      "@local/constants/*": ["src/app/constants/*"],
      "@local/contexts/*": ["src/app/contexts/*"],
      "@local/hooks/*": ["src/app/hooks/*"],
      "@packages/openapi/*": ["./src/packages/openapi/*"],
      "@local/pages/*": ["src/app/pages/*"],
      "@local/routes/*": ["src/app/routes/*"],
      "@packages/server/*": ["./src/packages/server/*"],
      "@packages/serviceworker/*": ["./src/packages/service-worker/*"],
      "@packages/test/*": ["./src/packages/test/*"],
      "@packages/uilibrary/*": ["./src/packages/ui-library/*"],
      "@packages/utils/*": ["./src/packages/utils/*"]
    }
  },
  "include": ["src/**/*", "src/configs/vitest.setup.ts"],
  "exclude": ["node_modules", "coverage", "dist", "build"]
}
