{
  "name": "screen-geometry-app",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.2.0",
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "pre-push:ui": "pnpm run --filter @screen-geometry-app/web pre-push",
    "pre-push": "concurrently  -n \"web,server\" -c \"magenta,blue\" \"pnpm run pre-push:ui\"",
    "start:ui": "pnpm --filter '@screen-geometry-app/web' dev",
    "start": "concurrently  -n \"web,server\" -c \"magenta,blue\" \"pnpm start:ui\"",
    "build": "pnpm run --recursive build",
    "build:prod": "pnpm run --recursive build:prod",
    "build:dev": "pnpm run --recursive build:dev",
    "lint:staged:ui": "pnpm run --filter @screen-geometry-app/web lint:staged",
    "lint:staged": "concurrently  -n \"web,server\" -c \"magenta,blue\" \"pnpm run lint:staged:ui\"",
    "e2e": "pnpm run --recursive e2e",
    "e2e:install": "pnpm run --recursive e2e:install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  }
}
