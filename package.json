{
  "name": "screen-geometry-app",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.2.0",
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "start:ui": "pnpm --filter '@screen-geometry-app/web' dev",
    "start": "pnpm run start:ui",
    "build": "pnpm recursive run build",
    "build:prod": "pnpm build",
    "build:dev": "pnpm recursive run build:dev",
    "lint:fix": "pnpm recursive run lint:fix",
    "lint": "pnpm recursive run lint",
    "format": "pnpm recursive run format",
    "test": "pnpm recursive run test",
    "test:specs": "pnpm recursive run test:specs",
    "e2e": "pnpm recursive run e2e",
    "build-storybook": "pnpm recursive run build-storybook"
  },
  "devDependencies": {
    "husky": "^9.1.1",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,json,yaml,yml} !(src/openapi/generated/**/*)": "npm run lint:fix",
    "*.{ts,tsx,js,csss,json,yaml,yml,md*}": "npm run format"
  }
}
