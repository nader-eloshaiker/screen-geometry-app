{
  "name": "screen-geometry-app",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.2.0",
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "pre-push": "pnpm run --recursive pre-push",
    "start:ui": "pnpm --filter '@screen-geometry-app/web' dev",
    "start": "pnpm run start:ui",
    "build": "pnpm run --recursive build",
    "build:prod": "pnpm build",
    "build:dev": "pnpm run --recursive build:dev",
    "lint:fix": "pnpm run --recursive lint:fix",
    "lint:staged:ui": "pnpm run --filter @screen-geometry-app/web lint:staged",
    "lint:staged": "concurrently  -n \"web,server\" -c \"magenta,blue\" \"pnpm run lint:staged:ui\"",
    "lint": "pnpm run --recursive lint",
    "format": "pnpm run --recursive format",
    "test": "pnpm run --recursive test",
    "test:specs": "pnpm run --recursive test:specs",
    "e2e": "pnpm run --recursive e2e",
    "e2e:install": "pnpm run --recursive e2e:install",
    "build-storybook": "pnpm run --recursive build-storybook"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  }
}
