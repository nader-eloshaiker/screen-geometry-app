{
  "name": "screen-geometry-app",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.2.0",
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "pre-push:ui": "pnpm run --filter @screengeometry/web pre-push",
    "pre-push": "concurrently  -n 'web,server' -c 'magenta,blue' 'pnpm run pre-push:ui'",
    "start:ui": "pnpm --filter '@screengeometry/web' dev",
    "start": "concurrently  -n 'web,server' -c 'magenta,blue' 'pnpm start:ui'",
    "build": "pnpm run --recursive build",
    "build:prod": "pnpm run --recursive build:prod",
    "build:dev": "pnpm run --recursive build:dev",
    "lint:staged:api": "pnpm run --filter @screengeometry/lib-api lint:staged",
    "lint:staged:server": "pnpm run --filter @screengeometry/server lint:staged",
    "lint:staged:ui": "pnpm run --filter @screengeometry/lib-ui lint:staged",
    "lint:staged:web": "pnpm run --filter @screengeometry/web lint:staged",
    "lint:staged": "pnpm lint:staged:web && pnpm lint:staged:ui && pnpm lint:staged:api",
    "test:ui": "pnpm --filter '@screengeometry/web' test",
    "test": "concurrently  -n 'web,server' -c 'magenta,blue' 'pnpm run test:ui'",
    "e2e": "pnpm run --filter '@screengeometry/web' e2e",
    "e2e:install": "pnpm run --filter '@screengeometry/web' e2e:install"
  },
  "devDependencies": {
    "concurrently": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  }
}