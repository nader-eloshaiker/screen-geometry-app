{
  "name": "screen-geometry-app",
  "version": "1.8.0",
  "homepage": "https://github.com/nader-eloshaiker/screen-geometry-app",
  "private": false,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Nader Eloshaiker",
    "url": "https://github.com/nader-eloshaiker"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "updatemsw": "pnpx msw init",
    "dev": "vite",
    "dev:e2e": "vite --mode development --port 3000",
    "preview": "vite preview",
    "build": "tsc && vite build",
    "build:prod": "pnpm build",
    "build:dev": "tsc && vite build --mode development",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "gen:spec": "orval --config ./orval.config.ts",
    "gen:testbadges": "vitest --run --coverage && node ./tools/createCoverageBadges.cjs",
    "test": "vitest --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:ci": "vitest --run --coverage",
    "e2e": "pnpm exec playwright test",
    "e2e:ui": "pnpm exec playwright test --ui",
    "e2e:codegen": "pnpm exec playwright codegen localhost:3000",
    "e2e:install": "pnpm exec playwright install --with-deps",
    "e2e:report": "pnpm exec playwright show-report",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "sb": "storybook dev -p 6006",
    "sb:test": "test-storybook --coverage",
    "sb:ci": "concurrently -k -s first -n \"Storybook,Test\" -c \"magenta,blue\" \"pnpm sb\" \"wait-on tcp:6006 && pnpm sb:test\"",
    "sb:build": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@react-hook/resize-observer": "^1.2.6",
    "@tanstack/react-query": "^5.28.9",
    "axios": "^1.6.8",
    "clsx": "^2.1.0",
    "localforage": "^1.10.0",
    "minisearch": "^6.3.0",
    "msw": "^2.2.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ga4": "^1.4.1",
    "react-hook-form": "^7.50.1",
    "react-lazy-load-image-component": "^1.6.0",
    "react-router-dom": "^6.22.3",
    "simpler-color": "^1.0.1",
    "web-vitals": "^3.5.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@bgotink/playwright-coverage": "^0.2.2",
    "@codecov/vite-plugin": "0.0.1-beta.5",
    "@playwright/test": "^1.44.0",
    "@storybook/addon-coverage": "^1.0.3",
    "@storybook/addon-essentials": "^8.1.1",
    "@storybook/addon-interactions": "^8.1.1",
    "@storybook/addon-links": "^8.0.4",
    "@storybook/addon-onboarding": "^8.1.1",
    "@storybook/addon-themes": "^8.1.1",
    "@storybook/blocks": "^8.1.1",
    "@storybook/react": "^8.1.1",
    "@storybook/react-vite": "^8.1.1",
    "@storybook/test": "^8.1.1",
    "@storybook/test-runner": "^0.17.0",
    "@tanstack/react-query-devtools": "^5.28.8",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/jsdom": "^21.1.2",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@types/react-helmet": "^6.1.11",
    "@types/react-lazy-load-image-component": "^1.6.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-istanbul": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "daisyui": "^4.11.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "husky": "^9.0.11",
    "jsdom": "^23.0.1",
    "jsonfile": "^6.1.0",
    "lint-staged": "^15.2.2",
    "mkdirp": "^3.0.1",
    "orval": "^6.23.0",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react-helmet-async": "^2.0.4",
    "storybook": "^8.1.1",
    "styled-components": "^6.1.8",
    "tailwind-merge": "^2.3.0",
    "tailwind-styled-components": "^2.2.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vite": "^5.2.11",
    "vite-plugin-checker": "^0.6.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "**/*.{ts,tsx,js,json,yaml,yml} !(src/openapi/generated/**/*)": "npm run lint:fix",
    "*.{ts,tsx,js,csss,json,yaml,yml,md*}": "npm run format"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
